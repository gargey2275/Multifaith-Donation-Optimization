{
  "version": 2,
  "builds": [
    {
      "src": "Server/backend/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "Client/frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "installCommand": "npm install", "buildCommand": "npm run build" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "Server/backend/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "Client/frontend/build/$1"
    }
  ]
}